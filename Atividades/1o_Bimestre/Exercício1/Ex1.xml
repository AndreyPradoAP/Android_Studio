<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/Label1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Digite a nota 1 do aluno"/>

        <EditText
            android:id="@+id/InputNumero1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/Label2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Digite a nota 2 do aluno"/>

        <EditText
            android:id="@+id/InputNumero2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/botao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular" />

        <TextView
            android:id="@+id/LabelMedia"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Média do aluno: "/>

        <TextView
            android:id="@+id/LabelSitacaoAluno"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Situação do aluno: "/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>