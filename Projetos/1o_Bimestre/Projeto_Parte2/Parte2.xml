<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite o seu nome"/>

            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite a sua idade"/>

            <EditText
                android:id="@+id/editIdade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite o seu peso"/>

            <EditText
                android:id="@+id/editPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha um prato"/>

            <RadioGroup
                android:id="@+id/groupPrato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radioVegetariano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetariano"/>

                <RadioButton
                    android:id="@+id/radioPeixe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peixe"/>

                <RadioButton
                    android:id="@+id/radioFrango"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frango"/>

                <RadioButton
                    android:id="@+id/radioCarne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carne"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha uma sobremesa"/>

            <RadioGroup
                android:id="@+id/groupSobremesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radioAbacaxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abacaxi"/>

                <RadioButton
                    android:id="@+id/radioSorvete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sorvete Diet"/>

                <RadioButton
                    android:id="@+id/radioMouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mouse Diet"/>

                <RadioButton
                    android:id="@+id/radioChocolate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mouse Chocolate"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha uma bebida"/>

            <RadioGroup
                android:id="@+id/groupBebida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radioCha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chá"/>

                <RadioButton
                    android:id="@+id/radioLaranja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suco de laranja"/>

                <RadioButton
                    android:id="@+id/radioMelao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suco de melão"/>

                <RadioButton
                    android:id="@+id/radioRefrigerante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refrigerante diet"/>
            </RadioGroup>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OK"/>

            <TextView
                android:id="@+id/viewResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>